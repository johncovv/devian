{
	"compilerOptions": {
		"target": "ES2016",
		"lib": ["ES2021"],
		"types": ["node"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "./out",
		"baseUrl": "./src",
		"declaration": false,
		"strict": true,
		"esModuleInterop": true,
		"paths": {
			"@modules/*": ["modules/*"],
			"@config/*": ["config/*"],
			"@client/*": ["client/*"],
			"@enums/*": ["enums/*"]
		},
		"sourceMap": false,
		"skipLibCheck": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
